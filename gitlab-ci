image: davxy/linux-builder

stages:
    - build
    - test
    - sonar
    - deploy

# Build
build:
    stage: build
    script:
        - make

# Test
test:
    stage: test
    dependencies:
        - build
    script:
        - make test CONFIG=config/config-ci.mk
        - (cd test; valgrind --leak-check=full --error-exitcode=2 ./test -v)
        - gcovr --exclude test -r . | grep TOTAL

# Publish to SonarQube
sonar:
    stage: sonar
    dependencies:
        - test
    script:
        - make sonar CONFIG=config/config-ci.mk

# Publish API Documentation
docs:
    stage: deploy
    dependencies:
        - test
    script:
        - make doc
        - rm -rf /docs/*
        - mv doc/doxy/html/* /docs/
    only:
        - tags
